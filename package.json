{
	"name": "kio-ng2-markdown",
	"version": "0.0.0",
	"description": "",
	"module": "./src/module.ts",
	"main": "./release/module.js",
	"typings": "./release/module.d.ts",
	"keywords": [],
	"author": "Matthias Buchholz <mb@averagejoe.de>",
	"license": "ISC",
	"scripts": {
		"deploy:release": "rm -rf ./release; mv ./build release",
		"transpile": "ngc -p tsconfig-ngc.json",
		"test": "ts-mocha ./src/**/*.spec.ts",
		"pretest": "npm run build",
		"test:watch": "./scripts/watch.sh test",
		"prestart": "npm run build",
		"start": "npm run dev",
		"dev": "./node_modules/.bin/nodemon -e ts --ignore dist/ --exec \"npm run dev\"",
		"watch:test": "ts-mocha -w ./test/**/*.spec.ts",
		"lint": "tslint ./src/**/*.ts ./test/**/*.ts",
		"version": "npm run release",
		"postversion": "git push && git push --tags",
		"prebuild:release": "rm -rf ./release",
		"build": "npm run transpile",
		"build:release": "NODE_ENV=production npm run build && npm run deploy:release",
		"build:release:watch": "./scripts/watch.sh build:release",
		"build:package": "NODE_ENV=package npm run build",
		"build:ts": "tsc -p tsconfig.release.json",
		"package:minify": "uglifyjs release/index.js --source-map release/index.min.js.map --source-map-url release/index.js.map --compress --mangle --screw-ie8 --output release/index.min.js"
	},
	"devDependencies": {
		"@angular/compiler-cli": "^4.1.3",
		"@types/chai": "^4.0.0",
		"@types/mocha": "^2.2.41",
		"@types/node": "^7.0.29",
		"mocha": "^3.4.2",
		"nodemon": "^1.11.0",
		"ts-mocha": "^1.0.3",
		"ts-node": "^3.0.6",
		"tslint": "^5.4.3",
		"typescript": "^2.3.4"
	},
	"dependencies": {
		"@angular/common": "^4.1.3",
		"@angular/compiler": "^4.1.3",
		"@angular/core": "^4.1.3",
		"@angular/platform-browser": "^4.1.3",
		"@angular/platform-browser-dynamic": "^4.1.3",
		"@types/showdown": "^1.4.32",
		"rxjs": "^5.4.0",
		"showdown": "^1.7.1",
		"showdown-footnotes": "^2.1.2",
		"zone.js": "^0.8.12"
	}
}
