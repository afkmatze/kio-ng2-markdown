{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./src",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
        "../node_modules/@types"
     ]
  },
  "exclude": [
    "node_modules",
    "release",
    "aot"
  ],

  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : false
 }
}