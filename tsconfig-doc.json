{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./build"
  },

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "node_modules"
  ],

  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : false
 }
}